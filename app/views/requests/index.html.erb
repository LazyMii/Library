<% provide(:title, "Purchase Request") %>
<h1>Purchase Request</h1>

<table>
  <thead>
    <tr>
      <th>ISBN</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Text</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.isbn %></td>
        <td><%= request.title %></td>
        <td><%= request.publisher %></td>
        <td><%= request.text %></td>
        <td><%= request.name %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
