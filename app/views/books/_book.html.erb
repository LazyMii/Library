<th><%= link_to book.title, book %></th>
<th><%= render :text => book.isbn_13 %></th>
<% loan = Loan.find_by(:book_id => book.id) %>
<% if loan.nil? then %>
    <th><%= render :text => "x" %></th>
<% else %>
    <% user = User.find_by(:id => loan.user_id) %>
    <th><%= render :text => user.name %></th>
<% end %>
<th><%= link_to "delete", book, method: :delete %></th>
